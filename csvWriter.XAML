<Window x:Class="ShortcutList.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ShortcutList"
        mc:Ignorable="d"
        Title="Shortcut List App" Height="550" Width="450">
    <Grid Name="appGrid">
        <Label Content="Shortcut List App" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,10,0,0" FontSize="14"/>
        <Label Content="Name:" HorizontalAlignment="Left" Margin="20,50,0,0" VerticalAlignment="Top"/>
        <TextBox Name="txtName" HorizontalAlignment="Left" Height="25" Margin="115,50,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="300"/>
        <Label Content="Parent Folder:" HorizontalAlignment="Left" Margin="20,90,0,0" VerticalAlignment="Top"/>
        <TextBox Name="txtShortcut" HorizontalAlignment="Left" Height="25" Margin="115,90,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="300"/>
        <Label Content="Target Type:" HorizontalAlignment="Left" Margin="20,130,0,0" VerticalAlignment="Top"/>
        <RadioButton Name="rbSystem" Content="File System" HorizontalAlignment="Left" Margin="115,130,0,0" VerticalAlignment="Top"/>
        <RadioButton Name="rbURL" Content="URL" HorizontalAlignment="Left" Margin="215,130,0,0" VerticalAlignment="Top"/>
        <Label Content="Shortcut Key:" HorizontalAlignment="Left" Margin="20,170,0,0" VerticalAlignment="Top"/>
        <TextBox Name="txtKey" HorizontalAlignment="Left" Height="25" Margin="115,170,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="300"/>
        <Label Content="Arguments:" HorizontalAlignment="Left" Margin="20,210,0,0" VerticalAlignment="Top"/>
        <TextBox Name="txtArguments" HorizontalAlignment="Left" Height="25" Margin="115,210,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="300"/>
        <Label Content="Start In:" HorizontalAlignment="Left" Margin="20,250,0,0" VerticalAlignment="Top"/>
        <TextBox Name="txtStart" HorizontalAlignment="Left" Height="25" Margin="115,250,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="300"/>
        <Label Content="Icon Path:" HorizontalAlignment="Left" Margin="20,290,0,0" VerticalAlignment="Top"/>
        <TextBox Name="txtIcon"  HorizontalAlignment="Left" Height="25" Margin="115,290,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="300"/>
        <Label Content="Target Path:" HorizontalAlignment="Left" Margin="20,330,0,0" VerticalAlignment="Top"/>
        <TextBox Name="txtTarget"  HorizontalAlignment="Left" Height="25" Margin="115,330,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="300"/>
        <Label Content="Path2:" HorizontalAlignment="Left" Margin="20,370,0,0" VerticalAlignment="Top"/>
        <TextBox Name="txtPath" HorizontalAlignment="Left" Height="25" Margin="115,370,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="300"/>
        <Label Content="RoleGroup:" HorizontalAlignment="Left" Margin="20,410,0,0" VerticalAlignment="Top"/>
        <TextBox Name="txtRole" HorizontalAlignment="Left" Height="25" Margin="115,410,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="300"/>
        <Button Name="btnSubmit"  Content="Submit" HorizontalAlignment="Center" Margin="0,0,200,20" VerticalAlignment="Bottom" Width="75" Click="BtnSubmit_Click" IsDefault="True" IsCancel="True"/>
        <Button Name="btnClear" Content="Clear" HorizontalAlignment="Center" Margin="0,0,0,20" VerticalAlignment="Bottom" Width="75" Click="BtnClear_Click"/>
        <Button Name="btnExit" Content="Exit" HorizontalAlignment="Center" Margin="200,0,0,20" VerticalAlignment="Bottom" Width="75" Click="BtnExit_Click"/>
        

    </Grid>
</Window>
